<!-- footer.ejs -->
<footer class="footer-default">
    <!-- footer-top -->
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <!-- footer-brand -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer-brand">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 footer-logo">
                        <img src="../logo/logo_all.png" alt="">
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 footer-user">
                        <% var footer_user = ['註冊享受乘車', '成爲合作駕駛']; %>
                        <% for (var i = 0; i < footer_user.length; ++i) { %>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" id="user">
                            <a class="btn btn-sm btn-dark" href="#"><%= footer_user[i] %></a>
                        </div>
                        <% } %>
                    </div>
                </div>
                <!-- /.footer-brand -->

                <!-- footer-menu -->
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 footer-menu">
                    <h4>Menu —</h4>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <ul class="footer-page">
                            <% var footer_page = [['feature', '特色'], ['passenger', '乘客'], ['driver', '駕駛'], ['team', '團隊']]; %>
                            <% for (var i = 0; i < footer_page.length; ++i) { %>
                            <li>
                                <a href="#<%= footer_page[i][0] %>"><%= footer_page[i][1] %></a>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <ul class="footer-page">
                            <% var footer_page = [['terms', '條款'], ['privacy', '隱私權'], ['security', '安全性'], ['help', '幫助']]; %>
                            <% for (var i = 0; i < footer_page.length; ++i) { %>
                            <li>
                                <a href="#"><%= footer_page[i][1] %></a>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <!-- /.footer-menu -->

                <!-- footer-social -->
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 footer-social">
                    <h4>Follow Us —</h4>
                    <% var btn_social = ['facebook', 'google-plus', 'twitter', 'instagram']; %>
                    <% for (var i = 0; i < btn_social.length; ++i) { %>
                    <a class="btn-social" id="<%= btn_social[i] %>" href="#">
                        <i class="fa fa-<%= btn_social[i] %>"></i><span></span>
                    </a>
                    <% } %>
                </div>
                <!-- /.footer-social -->

                <!-- footer-badges -->
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 footer-badges">
                    <h4>Download —</h4>
                    <% var badge_link = ['google_play', 'apple_store']; %>
                    <% for (var i = 0; i < badge_link.length; ++i) { %>
                    <a class="badge-link" id="<%= badge_link[i] %>" href="#">
                        <img src="badge/<%= badge_link[i] %>.svg" alt="">
                    </a>
                    <% } %>
                </div>
                <!-- /.footer-badges -->
            </div>
        </div>
    </div>
    <!-- /.footer-top -->

    <!-- footer-bottom -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="footer-copyright">Copyright 2017 by <b>SCABER</b>. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- /.footer-bottom -->
</footer>
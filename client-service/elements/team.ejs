<!-- team.ejs -->
<section class="section-default section-team" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 section-top">
                <h2 class="section-title">開發團隊</h2>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 section-center">
                <% var team = [['劉家良', '前端工程', '電機工程'], ['瞿旭民', '系統工程', '資訊工程'], ['陸勇盛', '前端工程', '資訊工程'], ['吳治緯', '系統工程', '電機工程'], ['張睿宏', '視覺設計', '交通管理科'], ['江曜新', '前端工程', '測量及空間資訊']]; %>
                <% for (var i = 0 ; i < team.length; ++i) { %>
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4 responsive-block">
                    <img class="block-img" src="profile/<%= team[i][0] %>.jpg">
                    <h3 class="block-title" id="name"><%= team[i][0] %></h3>
                    <h3 class="block-title" id="work"><%= team[i][1] %></h3>
                    <ul class="block-list">
                        <li><i class="fa fa-user-circle-o" aria-hidden="true"></i>國立成功大學</li>
                        <li><i class="fa fa-briefcase" aria-hidden="true"></i><%= team[i][2] %></li>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</section>